<!-- Header -->
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="user-image" style="background-image:url('http://res.cloudinary.com/dsnpiaom4/image/upload/dpr_2.0,f_auto/{{user.profile.profileImage}}')"></div>
                <div class="intro-text">
                    <span class="name">{{user.profile.firstName}} {{user.profile.lastName}}</span>
                    <hr class="star-light">
                    <span class="skills">{{user.profile.description}}{{!-- Web Developer - Graphic Artist - Software Engineer --}}</span>
                </div>
            </div>
        </div>
    </div>
</header>
